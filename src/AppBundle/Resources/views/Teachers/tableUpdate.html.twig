<div id="updateTable">
   <table class="table table-bordered table-hover">
       <tr>
           <th class="text-center">Предмет</th>
           <th class="text-center">Дата</th>
           <th class="text-center">Оценка</th>
           <th class="text-center">Операции</th>
       </tr>
       {% for item in progress %}
           <tr>
               <td class="text-center">{{ item.name }}</td>
               <td class="text-center">{{ item.date|date("d-m-Y") }}</td>
               <td class="text-center markUser">{{ item.mark }}</td>
               <td class="text-center"><button type="button" class="btn btn-warning edit" data-id="{{ item.id }}"><span class="glyphicon glyphicon-pencil"></span></button></td>
           </tr>
       {% else %}
           <tr>
               <td class="text-center" colspan="5">Ничего не найдено</td>
           </tr>
       {% endfor %}
   </table>
</div>
<script>
    $(document).ready(function () {
     $(".edit").click(function () {
         $('#myModal').modal('show');
         edit_id = $(this).attr("data-id");
     });

     $("#edit").click(function () {
         var mark = $("#mark").val();
         tableUpdate(mark, edit_id);
         $('#myModal').modal('hide');
     });

     $('tr').click( function() {
        var mark = $(this).find('.markUser').text();
        $("#mark").val(mark);
     });
    });
</script>